{
  "compilerOptions": {
    "lib": [
      "es5"
    ],
    "target": "es2017",                            
    "experimentalDecorators": true,                   
    "emitDecoratorMetadata": true,                    
    "module": "commonjs",                                
    "rootDir": "./src",                                  
    "moduleResolution": "node",                       
    "baseUrl": "./",                               
    "paths": {
      "@client/*": ["./src/client/*"],
      "@gateway/*": ["./src/gateway/*"],
      "@rest/*": ["./src/rest/*"],
      "@structures/*": ["./src/structures/*"]
    },
    "strict": true,
  },
  "include": [
    "./src/**/*.ts"
  ]
}
